<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/export_6"
    android:foregroundGravity="fill"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/userProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#00FFFFFF"
        android:gravity="center_horizontal"
        android:onClick="goToUserProfileActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/export_8"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/goodTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Good "
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/timeOfTheDayTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeOfTheDayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Time of the day"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/commaTextView"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/commaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:text=","
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeOfTheDayTextView" />

    <TextView
        android:id="@+id/todaysDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="DD/MM/YYYY"
        android:textColor="#368874"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <TextView
        android:id="@+id/youHaveTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="14dp"
        android:text="You have "
        android:textColor="#368874"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todaysDateTextView" />

    <TextView
        android:id="@+id/numIncomTasksTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="0"
        android:textColor="#368874"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/youHaveTextView"
        app:layout_constraintTop_toBottomOf="@+id/todaysDateTextView" />

    <TextView
        android:id="@+id/incomTasksTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text=" incomplete tasks"
        android:textColor="#368874"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/numIncomTasksTextView"
        app:layout_constraintTop_toBottomOf="@+id/todaysDateTextView" />

    <TextView
        android:id="@+id/youveFocusedForTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="clip_vertical|center_horizontal"
        android:text="You've focused for"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numIncomTasksTextView" />

    <TextView
        android:id="@+id/todayTotFocHourTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="89dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textColor="#207567"
        android:textSize="65sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/youveFocusedForTextView" />

    <TextView
        android:id="@+id/hourTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="h "
        android:textColor="#207567"
        android:textSize="65sp"
        app:layout_constraintStart_toEndOf="@+id/todayTotFocHourTextView"
        app:layout_constraintTop_toBottomOf="@+id/youveFocusedForTextView" />

    <TextView
        android:id="@+id/todayTotFocMinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textColor="#207567"
        android:textSize="65sp"
        app:layout_constraintStart_toEndOf="@+id/hourTextView"
        app:layout_constraintTop_toBottomOf="@+id/youveFocusedForTextView" />

    <TextView
        android:id="@+id/minuteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="min"
        android:textColor="#207567"
        android:textSize="65sp"
        app:layout_constraintStart_toEndOf="@+id/todayTotFocMinTextView"
        app:layout_constraintTop_toBottomOf="@+id/youveFocusedForTextView" />

    <TextView
        android:id="@+id/todayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="today"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayTotFocHourTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>